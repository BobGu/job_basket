<button type="button" class="btn btn-sm" data-toggle="collapse" data-target="#demo" aria-expanded="true" aria-controls="demo">
  Filter
</button>

<div id="demo" class="collapse in">
  <div class='location'>
    <div class="btn-group" data-toggle="buttons">
      <h5> Locations </h5>
      <% @jobs.each do |job| %>
        <% if job.location %>
          <label id="<%=job.location.to_s.split(" ")[0]%>" class="btn btn-primary btn-xs filter-button">
            <input type="checkbox" autocomplete="off" value=<%= job.location %>> <%= job.location %>
          </label>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div id='job-wrapper'>
  <div class= 'container-fluid'>
    <div class='row'>
        <%= div_for(@jobs, class: 'listing col-lg-12 col-md-12 col-sm-12') do |job| %>
          <div class="<%=job.location.to_s.split(" ")[0]%> panel panel-default hide-locations">
            <div class="panel-heading">
              <h3 class="panel-title <%=job.id%>"><%= job.title %></h3>
            </div>
            <div class='panel-body'>
              URL: <%= job.url %>
              <div>Posted On: <%= job.posted_on %></div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div> <!-- this is the end of the job wrapper -->
