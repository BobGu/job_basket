<button type="button" class="btn btn-sm" data-toggle="collapse" data-target="#demo" aria-expanded="true" aria-controls="demo">
  Filter
</button>

<div id="demo" class="collapse in">
  <div class='location'>
    <div class="btn-group" data-toggle="buttons">
      <h5> Locations </h5>
      <label id='btn-circle' class="btn btn-primary btn-xs">
        <input type="checkbox" autocomplete="off" checked> Checkbox 1
      </label>
      <label id='btn-circle' class="btn btn-primary btn-xs">
        <input type="checkbox" autocomplete="off"> Checkbox 2
      </label>
      <label id='btn-circle' class="btn btn-primary btn-xs">
        <input type="checkbox" autocomplete="off"> Checkbox 3
      </label>
    </div>
  </div>
</div>

<div id='job-wrapper'>
  <div class= 'container-fluid'>
    <div class='row'>
        <%= div_for(@jobs, class: 'listing col-lg-12 col-md-12 col-sm-12') do |job| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= job.title %></h3>
            </div>
            <div class='panel-body'>
              <div id=<%="#{job.id}-description" %>>
                <%= sanitize job.description %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div> <!-- this is the end of the job wrapper -->
